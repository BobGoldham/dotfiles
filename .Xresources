! basic configuration
URxvt.scrollBar: false
URxvt.cursorBlink: true
URxvt.internalBorder: 14
URxvt.urlLauncher: firefox

! font options
!URxvt.font:       xft:Hack Nerd Font Mono: size=11: antialiasing=true
!URxvt.font: xft:FiraCode Nerd Font Mono:style=Retina,Regular
URxvt.font: xft:FiraCode Nerd Font Mono:style=Retina:pixelsize=14
URxvt.boldFont: xft:FiraCode Nerd Font Mono:style=Bold:pixelsize=14
URxvt.italicFont: xft:FiraCode Nerd Font Mono:style=Light:pixelsize=14
Xft*dpi:          96
Xft*antialias:    true
Xft*hinting:      full


! Set terminal color scheme
! TODO: SET DIFFERENT BRIGHT/DARK VARIANTS

! special
*.foreground: #eeeeee
*.cursorColor: #eeeeee

! black
*.color0: #263640
*.color8: #4a697d

! red
*.color1: #e35430
*.color9: #e35430

! green
*.color2: #f5d65a
*.color10: #f5d65a
! #57ab33

! yellow
*.color3: #f2a846
*.color11: #f2a846

! blue
*.color4: #5692d6
*.color12: #5692d6

! magenta
*.color5: #976eff
*.color13: #976eff

! cyan
*.color6: #83bdde
*.color14: #83bdde

! white
*.color7: #e0e8f3
*.color15: #e0e8f3

! Enable normal copy/paste
URxvt.iso14755:        false
URxvt.iso14755_52:     false
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:

! Bind Ctrl-Shift-c & Ctrl-Shift-v to copy and paste
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard

urxvt*depth:32

! urxvt*background:rgba:0250/1100/1b00/dddd
! urxvt*background:rgba:1500/1800/2600/fa00
urxvt*background:rgba:1e00/2100/3700/e000

! urxvt*background: #17273e
